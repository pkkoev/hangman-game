<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.game.hangman">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.game.hangman.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.game.hangman.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.game.hangman.activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.game.hangman.activity.LobbyActivity"></activity>
        <activity
            android:name="com.example.game.hangman.activity.LoginFailedActivity"
            android:label="@string/title_activity_login_failed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.game.hangman.activity.RegisterFailedActivity"
            android:label="@string/title_activity_register_failed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.game.hangman.activity.WinGameActivity"
            android:label="@string/title_activity_win_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.game.hangman.activity.LooseGameActivity"
            android:label="@string/title_activity_loose_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.game.hangman.activity.NewGameActivity"
            android:label="@string/title_activity_new_game"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>